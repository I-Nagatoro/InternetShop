<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="InternetShop.BasketWindow"
        Title="BasketWindow">
	<DockPanel>
		<StackPanel Orientation="Vertical">
			<TextBlock Text="Корзина" HorizontalAlignment="Center" FontSize="25" Margin="0,10,0,0"/>
			<ListBox>
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel>
							<Image Width="100" Height="100" Source="{Binding ImagePath}"/>
							<StackPanel Orientation="Horizontal">
							<StackPanel>
								<TextBlock Text="{Binding ProductName}" FontSize="20" FontWeight="Bold"/>
								<TextBlock Text="{Binding Cost, StringFormat='Цена: {0:C}'}" FontSize="18"/>
								<TextBlock Text="{Binding ProductCaption}" FontSize="17"/>
							</StackPanel>
								<Button Content="-"/>
								<TextBlock Text="{Binding Count}"/>
								<Button Content="+"/>
							</StackPanel>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</DockPanel>
</Window>
