<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="InternetShop.CatalogWindow"
		x:CompileBindings="False"
        Title="CatalogWindow">
	<DockPanel>
		<StackPanel Orientation="Vertical">
			<TextBlock Text="Каталог" TextAlignment="Center" FontSize="25" Margin="0,10,0,0" />
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
				<TextBox Width="200" Watermark="Поиск"/>
				<ComboBox x:Name="comboSortName" Width="150" Margin="20,0,0,0"/>
				<ComboBox x:Name="comboSortCost" Width="150" Margin="20,0,0,0"/>
				<Button Height="32" Margin="20,0,0,0" Content="Сбросить фильтры"/>
			</StackPanel>
			<StackPanel>
				<ListBox>
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel Orientation="Horizontal" Spacing="10">
							<!--	<Image Width="50" Height="50" Source="{Binding ProductImage}"/> -->
								<StackPanel>
									<TextBlock Text="{Binding ProductName}" FontWeight="Bold"/>
									<TextBlock Text="{Binding Cost, StringFormat='Цена: {0:C}'}"/>
									<TextBlock Text="{Binding ProductCaption}"
											   TextWrapping="Wrap"
											   MaxWidth="300"/>
								</StackPanel>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</StackPanel>
		</StackPanel>
	</DockPanel>
</Window>
